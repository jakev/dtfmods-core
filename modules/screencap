#@About: Take screenshot from device.
#@Author: Jake Valletta (jakev)
#@Health: stable
#@Version: 1.0

. $DTF_LOG

if [ ! -z "$1" ]; then
    output="${1}.png"
else
    output=screen.png
fi

log_d "Saving screenshot: ${output}"

log_i "Waiting for device..."
adb wait-for-device
log_i "Connected!"

adb shell screencap -p | sed 's/\r$//' > "${output}"
